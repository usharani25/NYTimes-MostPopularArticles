<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/img"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/iv_rounded"
            android:background="@drawable/img"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    <LinearLayout
            android:layout_toRightOf="@+id/iv_rounded"
            android:layout_toEndOf="@+id/iv_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/iv_next"
            android:layout_toStartOf="@+id/iv_next">
        <TextView
                android:text="Loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:lines="2"
                android:lineSpacingExtra="5dp"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp" android:layout_marginTop="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="5dp"
                      android:layout_weight="100">
            <TextView
                    android:text="Loading"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_reporter"
                    android:lineSpacingExtra="5dp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="60"
            />
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/ic_calendar"
                    android:id="@+id/iv_calendar"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="10"/>
            <TextView
                    android:text="Loading"
                    android:layout_weight="30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_date"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"/>
        </LinearLayout>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_next"
            android:id="@+id/iv_next"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="8dp"
    />

</RelativeLayout>